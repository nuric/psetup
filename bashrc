# personal aliases
alias ls="ls --color"
alias ll="ls -al"
alias inv="xcalib -i -a"
alias rleft="xrandr --output HDMI1 --rotate left"
alias rnormal="xrandr --output HDMI1 --rotate normal"
alias tm="terminator -m"

# custom environment variables
export EDITOR="vim"
export VISUAL="vim"

# prompt
export PS1="\[\e[35;47m\]\@:\[\e[m\] "

